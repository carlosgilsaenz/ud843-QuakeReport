<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

        <TextView
            android:id="@+id/mag_list_item"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/magnitude_circle"
            android:layout_gravity="center_vertical"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_marginRight="16dp"
            tools:text="7.2"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="2">

                <TextView
                    android:id="@+id/distance_list_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:textAllCaps="true"
                    android:textSize="12sp"
                    android:layout_gravity="center_vertical"
                    android:ellipsize="end"
                    android:textColor="@color/textColorEarthquakeDetails"
                    android:maxLines="1"
                    tools:text="Near the"/>


                <TextView
                    android:id="@+id/city_list_item"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textColor="@color/textColorEarthquakeLocation"
                    tools:text="San Francisco aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"/>

        </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/date_list_item"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:layout_gravity="right"
            android:textSize="12sp"
            android:textColor="@color/textColorEarthquakeDetails"
            tools:text="Feb 2, 2017"/>

        <TextView
            android:id="@+id/time_list_item"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:textSize="12sp"
            android:layout_gravity="right"
            android:textColor="@color/textColorEarthquakeDetails"
            tools:text="3:00pm"/>

    </LinearLayout>

</LinearLayout>